#include <stdlib.h>
#include "holberton.h"

/**
 * _calloc - allocates memory for an array
 * @nmemb: check
 * @size: check
 * Return: a.
 */
int *array_range(int min, int max)
{
	int i, j, *a;

	if (min > max)
		return (NULL);
	a = malloc((max - min + 1) * sizeof(int));
	if (a == 0)
		return (NULL);
	j = min;
	i = 0;
	while (i < (max - min + 1))
	{
		a[i] = j ;
		j++;
		i++;
	}
	return (a);
}
