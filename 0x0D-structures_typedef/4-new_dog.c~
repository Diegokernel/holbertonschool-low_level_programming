#include "dog.h"
/**
 * *_strdup - prints buffer in hexa
 * @str: the size of the memory to print
 *
 * Return: a.
 */
char *_strdup(char *str)
{
	unsigned int i, j;
	char *a;

	if (str == 0)
		return (NULL);
	i = 0;
	while (str[i] != '\0')
		i++;
	a = (char *) malloc(i * sizeof(char) + 1);
	if (a == NULL)
		return (NULL);
	if (i != 0)
	{
		j = 0;
		while (j < i)
		{
			a[j] = str[j];
			j++;
		}
	}
	return (a);
}

/**
 * print_dog - prints a struct dog
 * @d: struct dog
 * Return: void.
 */
dog_t *new_dog(char *name, float age, char *owner)
{
	dog_t *doggo;
	char *dog_name, *dog_owner;

	if (name == NULL || owner == NULL)
		return (NULL);
	dog_name = _strdup(name);
	if(dog_name == NULL)
	{
		free(dog_name);
		return (NULL);
	}
        dog_owner = _strdup(owner);
	if(dog_owner == NULL)
        {
                free(dog_owner);
                return (NULL);
        }
	if(doggo == NULL)
        {
		free(dog_name);
		free(dog_owner);
		return (NULL);
	}
	doggo->name = dog_name;
	doggo->age = age;
	doggo->owner = dog_owner;
	return (doggo);
}
