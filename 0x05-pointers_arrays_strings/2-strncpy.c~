#include "holberton.h"

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
char *_strncpy(char *dest, char *src, int n)
{
	int i, j;

	i = 0;
	while ( i < n && src [i] != '\0')
	{
		dest [i] = src [i];
		i ++;
			}
	j = 0;
	while (j < n)
	{
		dest[j] = '\0';
		j++;
			}
	return (dest);
}
